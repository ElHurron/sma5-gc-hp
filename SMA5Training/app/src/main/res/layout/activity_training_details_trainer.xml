<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_training_details_trainer">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/distance_xlarge"
        android:layout_height="@dimen/distance_xlarge"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_back"
        android:layout_marginStart="@dimen/distance_small"
        android:layout_marginTop="@dimen/distance_small"
        android:importantForAccessibility="no" />


    <TextView
        android:id="@+id/txvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Daten zu Training #1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textSize="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="@dimen/distance_medium" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvwTrainingsDetails"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/my_light_primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >



            <TextView
                android:id="@+id/txvAccepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bisherige Zusagen"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txvAcceptedValues"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/distance_medium"
                />



            <TextView
                android:id="@+id/txvAcceptedValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xx"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@id/txvAccepted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/distance_medium"
                />

            <TextView
                android:id="@+id/txvDeclined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bisherige Absagen"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txvDeclinedValues"
                app:layout_constraintTop_toBottomOf="@id/txvAccepted"
                android:layout_marginTop="@dimen/distance_medium"
                />



            <TextView
                android:id="@+id/txvDeclinedValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xx"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@id/txvDeclined"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txvAccepted"
                android:layout_marginTop="@dimen/distance_medium"
                />

            <TextView
                android:id="@+id/txvNotVoted"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bisher weder noch"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txvNotVotedValues"
                app:layout_constraintTop_toBottomOf="@id/txvDeclined"
                android:layout_marginTop="@dimen/distance_medium"
           />



            <TextView
                android:id="@+id/txvNotVotedValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xx"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@id/txvNotVoted"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txvDeclinedValues"
                android:layout_marginTop="@dimen/distance_medium"
               />






        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>